<Window x:Class="WpfApp1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню" Height="450" Width="525"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Админ-панель" Click="MenuItem_Click_1"></MenuItem>
            <MenuItem Header="Выход" Click="MenuItem_Click" ></MenuItem>
        </Menu>
        <StackPanel Margin="0,25,0,0">
            <Button Content="Сотрудники" Click="EmployeesButton_Click" Margin="10"/>
            <Button Content="Отпуска" Margin="10"/>
            <Button Content="Больничные" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>